# Harmonic Beacon Streaming Environment Configuration
# Copy this to .env and fill in your production values

# Server identification
PUBLIC_IP=                      # Your server's public IP for WebRTC

# Storage path for meditation files
STORAGE_PATH=/mnt/raid/storage/harmonic-beacon

# User/Group IDs (match your server's file ownership)
UID=1000
GID=1000

# Timezone
TZ=America/Argentina/Buenos_Aires

# go2rtc internal API (for Next.js to communicate with go2rtc)
GO2RTC_INTERNAL_URL=http://go2rtc:1984

# Domains (for CORS and SSL)
ALLOWED_ORIGINS=https://app.harmonic-beacon.com,https://harmonic-beacon.com

# Zitadel Configuration
ZITADEL_ISSUER=https://your-zitadel-instance.zitadel.cloud
ZITADEL_CLIENT_ID=your_client_id
ZITADEL_INTROSPECTION_URL=https://your-zitadel-instance.zitadel.cloud/oauth/v2/introspect
